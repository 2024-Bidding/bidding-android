<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_my_page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="26dp"
            android:text="@string/my_page_title"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_my_page_profile"
            android:layout_width="164dp"
            android:layout_height="164dp"
            android:layout_marginTop="34dp"
            app:cardCornerRadius="120dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_my_page_title">

            <ImageView
                android:id="@+id/img_my_page_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_my_page_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@id/cv_my_page_profile"
            app:layout_constraintStart_toStartOf="@id/cv_my_page_profile"
            app:layout_constraintTop_toBottomOf="@id/cv_my_page_profile" />

        <TextView
            android:id="@+id/tv_my_page_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOutline"
            app:layout_constraintEnd_toEndOf="@id/tv_my_page_name"
            app:layout_constraintStart_toStartOf="@id/tv_my_page_name"
            app:layout_constraintTop_toBottomOf="@id/tv_my_page_name" />

        <TextView
            android:id="@+id/tv_my_page_items_bid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="62dp"
            android:text="@string/my_page_items_bid"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_my_page_email" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_my_page_items_bid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_my_page_items_bid"
            tools:listitem="@layout/item_my" />

        <TextView
            android:id="@+id/tv_my_page_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/my_page_items"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="@id/rv_my_page_items_bid"
            app:layout_constraintTop_toBottomOf="@id/rv_my_page_items_bid" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_my_page_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_my_page_items"
            tools:listitem="@layout/item_my" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
